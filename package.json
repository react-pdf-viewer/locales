{
    "name": "@react-pdf-viewer/locales",
    "version": "1.0.0",
    "description": "Translations of the React PDF Viewer's UI in different languages",
    "license": "https://react-pdf-viewer.dev/license",
    "author": {
        "name": "Nguyen Huu Phuoc",
        "email": "me@phuoc.ng",
        "url": "https://twitter.com/nghuuphuoc"
    },
    "homepage": "https://react-pdf-viewer.dev",
    "keywords": [
        "react",
        "react.js",
        "pdf",
        "pdf.js",
        "pdf viewer"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/react-pdf-viewer/locales"
    },
    "bugs": {
        "url": "https://github.com/react-pdf-viewer/locales/issues"
    },
    "files": [
        "lib/*.json"
    ],
    "scripts": {
        "build": "rm -rf lib && mkdir lib && cp -r locales/*.json lib",
        "format": "prettier --write \"**/*.+(json)\"",
        "release": "npm run build && npm publish --access public"
    },
    "devDependencies": {
        "prettier": "^2.3.2"
    }
}
